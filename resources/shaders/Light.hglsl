// Light header file

struct LightBase
{
	vec3 color;
};

struct DirectionalLight
{
	LightBase lightBase;
	
	vec3 dir;
};

struct PointLight
{
	LightBase lightBase;
	
	// vec4 pointLightData
	vec3 pos;
	float radius;
};

struct SpotLight
{
    LightBase lightBase;
    
    vec4 pos;
    
    // vec4 radiusData
    float innerRadius;
    float outerRadius;
    vec2  padding;
};
