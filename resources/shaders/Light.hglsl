// Light header file

#ifndef MAX_LIGHT_NUM
#define MAX_LIGHT_NUM 20
#endif

struct LightBase
{
    vec3 color;
    int  type;
};

struct DirectionalLight
{
    LightBase lightBase;

    vec3 dir;
};

struct PointLight
{
    LightBase lightBase;

    vec3  pos;
    float radius;
};

struct SpotLight
{
    LightBase lightBase;
    
    vec3  pos; float posPadding;
    
    // vec4 radiusData
    float innerRadius;
    float outerRadius;
    vec2  padding;
};
